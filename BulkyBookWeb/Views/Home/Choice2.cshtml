@{
    ViewData["Title"] = "Choice 2";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="video-container">
        <video id="main-video" autoplay playsinline>
            <source src="~/videos/video2.mp4" type="video/mp4">
        </video>

        <video id="looping-video" loop playsinline style="display: none;">
            <source src="~/videos/loop2.mp4" type="video/mp4">
        </video>

        <div class="choices-overlay" style="display: none;">
            <button class="choice-button" onclick="choosePath('choice4')">Suivre le cri</button>
            <button class="choice-button" onclick="choosePath('choice5')">Ignorer</button>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>
