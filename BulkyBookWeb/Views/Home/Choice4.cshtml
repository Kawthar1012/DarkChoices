@{
    ViewData["Title"] = "Choice 1";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="video-container">
        <video id="main-video" autoplay playsinline>
            <source src="~/videos/video4-6.mp4" type="video/mp4">
        </video>

        <video id="looping-video" loop playsinline style="display: none;">
            <source src="~/videos/loop3.mp4" type="video/mp4">
        </video>

        <div class="choices-overlay" style="display: none;">
            <button class="choice-button" onclick="choosePath('choice7')">S'enfuir à travers la fôret</button>
            <button class="choice-button" onclick="choosePath('choice6')">Aller se cacher derrière un arbre</button>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>
