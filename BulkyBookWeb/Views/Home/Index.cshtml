@model BulkyBookWeb.Models.Choice
@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Dark Choices";

    string choiceJson = JsonConvert.SerializeObject(Model);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="css/site.css" />
</head>
<body>
    <div class="start-button-container">
        <button class="start-button" onclick="choosePath(@choiceJson)">Commencer</button>
    </div>

    <script src="js/site.js"></script>
</body>
</html>
